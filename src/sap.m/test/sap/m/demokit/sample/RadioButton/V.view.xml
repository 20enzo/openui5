<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<VBox class="sapUiSmallMargin">
		<Label text="Default RadioButton use" />
		<RadioButton
			groupName="GroupA"
			text="Option 1"
			selected="true" />
		<RadioButton groupName="GroupA" text="Option 2" />
		<RadioButton groupName="GroupA" text="Option 3" />
		<RadioButton groupName="GroupA" text="Option 4" />
		<RadioButton groupName="GroupA" text="Option 5" />
	</VBox>

	<VBox class="sapUiSmallMargin">
		<Label text="RadioButton in various ValueState variants" />
		<RadioButton
			valueState="Success"
			groupName="GroupB"
			text="Success" />
		<RadioButton
			valueState="Error"
			groupName="GroupB"
			text="Error" />
		<RadioButton
			valueState="Warning"
			groupName="GroupB"
			text="Warning" />
		<RadioButton
			valueState="Information"
			groupName="GroupB"
			text="Information" />
	</VBox>
</mvc:View>