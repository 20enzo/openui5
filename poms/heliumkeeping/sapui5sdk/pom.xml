<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	

	<!--**************************************************************************
	* POM SECTION: Maven Model Version Settings
	***************************************************************************-->

	<modelVersion>4.0.0</modelVersion>
	
	
	<!--************************************************************************ 
	* POM SECTION: Parent POM Settings 
	************************************************************************ -->

	<parent>
		<groupId>com.sap.ui5</groupId>
		<artifactId>ui5-heliumkeeping</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>


	<!--**************************************************************************
	* POM SECTION: Maven Settings
	***************************************************************************-->

	<groupId>com.sap.ui5.helium</groupId>
	<artifactId>sapui5-sdk-dist</artifactId>
	<packaging>pom</packaging>


	<!--**************************************************************************
	* POM SECTION: Project Settings
	***************************************************************************-->

	<name>${project.artifactId}</name>
	<description>SAPUI5 HANA Cloud Proxy Repository</description>
	

	<!--**************************************************************************
	* POM SECTION: Build Settings
	***************************************************************************-->

	<build>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<phase>clean</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<filesets>
								<fileset>
									<directory>${basedir}</directory>
									<includes>
										<include>**/*</include>
									</includes>
									<excludes>
										<exclude>.git/**</exclude>
										<exclude>.config/**</exclude>
										<exclude>.gitignore</exclude>
										<exclude>pom.xml</exclude>
										<exclude>neo-app.json</exclude>
									</excludes>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/.config</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.sap.ui5.dist</groupId>
									<artifactId>${project.artifactId}</artifactId>
									<version>${sap.ui5.version}</version>
									<classifier>static</classifier>
									<type>zip</type>
									<includes>
										*.*,
										content/**,
										discovery/**,
										docs/**,
										js/**,
										test-resources/**,
										theme/**,
										resources/sap/fiori/**,
										resources/sap/ui/demokit/**,
										resources/**/.library
									</includes>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${basedir}</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
		
			<plugin>
				<groupId>com.sap.watt</groupId>
				<artifactId>com.sap.watt-maven-plugin</artifactId>
				<configuration>
					<gitUser>${gitUser}</gitUser>
					<gitPassword>${gitPassword}</gitPassword>
					<gitEmail>${gitEmail}</gitEmail>
					<gitPassword>${gitPassword}</gitPassword>
					<gitBranch>${gitBranch}</gitBranch>
					<cloudLandscape>${cloudLandscape}</cloudLandscape>
					<cloudUser>${cloudUser}</cloudUser>
					<cloudPassword>${cloudPassword}</cloudPassword>
					<cloudAccount>${cloudAccount}</cloudAccount>
					<cloudApplication>${cloudApplication}</cloudApplication>
					<!-- excludedChangedFiles>
						<excludedChangedFile>resources/sap/watt/uitools/version.json</excludedChangedFile>
					</excludedChangedFiles -->
					<versionReference>
						<groupId>com.sap.ui5.dist</groupId>
						<artifactId>${project.artifactId}</artifactId>
						<version>${sap.ui5.version}</version>
						<classifier>static</classifier>
						<type>zip</type>
					</versionReference>
				</configuration>
			</plugin>

		</plugins>
		
	</build>
	
	
</project>
