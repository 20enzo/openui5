    <!-- The version of this project is also the version of the UI5 dependencies -->
    <sap.ui5.version>1.17.0-SNAPSHOT</sap.ui5.version>

    <!-- REST API base URL for remote management of Tomcat 6.x and 7.x -->
    <tomcat.manager.url.v6>/manager</tomcat.manager.url.v6>
    <tomcat.manager.url.v7>/manager/text</tomcat.manager.url.v7>

