  </properties>


  <!--**************************************************************************
  * POM SECTION: Build Settings
  ***************************************************************************-->

  <build>

    <!-- central definition of used plugin versions -->
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>com.sap.ui5.tools.maven</groupId>
          <artifactId>maven-tomcat-plugin</artifactId>
          <version>1.0.1-SNAPSHOT</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>

      <!-- enable the Tomcat plugin during clean phase! Housekeeping! ;) -->
      <plugin>
        <groupId>com.sap.ui5.tools.maven</groupId>
        <artifactId>maven-tomcat-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>deploy</goal>
            </goals>
            <phase>clean</phase>
          </execution>
        </executions>
        <configuration>
          <remoteTomcatManagerUrl>${tomcat.sandbox.url}${tomcat.sandbox.manager.url}</remoteTomcatManagerUrl>
          <remoteTomcatUsername>${tomcat.sandbox.usr}</remoteTomcatUsername>
          <remoteTomcatPassword>${tomcat.sandbox.pwd}</remoteTomcatPassword>
          <skipDeploy>true</skipDeploy>
          <skipUndeploy>true</skipUndeploy>
      <timeout>180</timeout>
        </configuration>
      </plugin>

    </plugins>

  </build>


