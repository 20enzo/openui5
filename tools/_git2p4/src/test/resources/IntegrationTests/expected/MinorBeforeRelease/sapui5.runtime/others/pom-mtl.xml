		<!-- The version of this project is also the version of the Phoenix dependencies -->
		<phoenix.version>${project.version}</phoenix.version>
		
		<!-- Sandbox Tomcat configuration => TODO: move to settings.xml -->
		<tomcat.sandbox.url>http://ymqd00410702a.dhcp.ymq.sap.corp:8080</tomcat.sandbox.url>
		<tomcat.sandbox.usr>deployadmin</tomcat.sandbox.usr>
		<tomcat.sandbox.pwd>phoenix123</tomcat.sandbox.pwd>
		
	</properties>
	
	
	<!--**************************************************************************
  * POM SECTION: Build Settings
  ***************************************************************************-->

	<build>
	
		<plugins>
		
			<!-- enable the Tomcat plugin during clean phase! Housekeeping! ;) -->
			<plugin>
				<groupId>com.sap.ui.phoenix.tools</groupId>
				<artifactId>maven-tomcat-plugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<goals>
							<goal>deploy</goal>
						</goals>
						<phase>clean</phase>
					</execution>
				</executions>
				<configuration>
					<remoteTomcatManagerUrl>${tomcat.sandbox.url}/manager</remoteTomcatManagerUrl>
					<remoteTomcatUsername>${tomcat.sandbox.usr}</remoteTomcatUsername>
					<remoteTomcatPassword>${tomcat.sandbox.pwd}</remoteTomcatPassword>
					<skipDeploy>false</skipDeploy>
					<skipUndeploy>false</skipUndeploy>
				</configuration>
			</plugin>

		</plugins>

	</build>


