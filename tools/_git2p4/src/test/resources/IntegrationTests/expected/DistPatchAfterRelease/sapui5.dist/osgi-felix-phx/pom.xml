<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.sap.ui.phoenix</groupId>
    <artifactId>maven-jlib-pom</artifactId>
    <version>1.44.3-SNAPSHOT</version>
    <relativePath>../maven/poms/jlib/pom.xml</relativePath>
  </parent>
  <artifactId>resource</artifactId>
  <packaging>jar</packaging>
  <name>${project.artifactId}</name>
  <description>Phoenix - Resource Handler</description>
  <properties>
    <phx.osgi.version>1.44.3.${maven.build.timestamp}</phx.osgi.version>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.1.0</version>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Version>${phx.osgi.version}</Bundle-Version>
			<Export-Package>com.sap.phx.resource.*;version="${phx.osgi.version}"</Export-Package>
			<Import-Package>!com.sap.phx.resource.*,*</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <version>1.44.3-SNAPSHOT</version>
    </dependency>
  </dependencies>
</project>
