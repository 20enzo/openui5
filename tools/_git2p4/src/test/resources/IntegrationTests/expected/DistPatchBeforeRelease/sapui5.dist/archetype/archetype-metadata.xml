<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="phoenix-build-extension-archetype">
  <requiredProperties>
    <requiredProperty key="pBuildExtensionName" >
      <defaultValue>sample-ext</defaultValue>
    </requiredProperty>
    <requiredProperty key="pCoreVersion">
      <defaultValue>1.44.3</defaultValue>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
    </fileSet>    
    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>META-INF/</include>
      </includes>
    </fileSet>
  </fileSets>    
</archetype-descriptor>