	<!--**************************************************************************
	* POM SECTION: Profiles Settings
	***************************************************************************-->

	<profiles>

		<!-- In the release build we do JAR signing! -->
		<profile>
			<id>release.build</id>
			<activation>
				<property>
					<name>ldi.releaseBuild</name>
				</property>
			</activation>
			<properties>
				<sap.ui5.jarsigner.skip>false</sap.ui5.jarsigner.skip>
			</properties>
		</profile>

		<!-- Include 'test' reactor only in a test build -->
		<profile>
			<id>test.build</id>
			<modules>
				<module>test</module>
			</modules>
		</profile>

		<!-- Verify the I18N properties files! -->
		<profile>
			<id>verify.i18n.build</id>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>com.sap.ldi</groupId>
							<artifactId>translation-plugin</artifactId>
							<executions>
								<execution>
									<id>verify-upload</id>
									<phase>prepare-package</phase> <!-- do not produce errors for m2e -->
									<goals>
										<goal>verify-upload</goal>
									</goals>
								</execution>
							</executions>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>

		<!-- include OpenUI5 into the reactor build for voter jobs (openui5 should be synced next to sapui5.runtime) -->
		<profile>
			<id>openui5.build</id>
			<modules>
				<module>../openui5</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.gmaven</groupId>
						<artifactId>gmaven-plugin</artifactId>
						<version>1.4</version>
						<inherited>false</inherited>
						<executions>
							<execution>
								<id>groovy-magic</id>
								<phase>validate</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<source><![CDATA[
										def root = project.basedir.getParentFile()
										def content = new File(root, 'openui5/pom.xml').getText("UTF-8")
										def pom = new XmlParser().parseText(content)
										def oui5Version = pom.version.text()
										def sui5Version = project.version

										log.info("Found OpenUI5 version: " + oui5Version)
										log.info("Found SAPUI5 version:  " + sui5Version)

										if (!sui5Version.equals(oui5Version)) {
											fail("The OpenUI5 version " + oui5Version + " doesn't match the SAPUI5 version " + sui5Version + "!");
										}
									]]></source>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>


