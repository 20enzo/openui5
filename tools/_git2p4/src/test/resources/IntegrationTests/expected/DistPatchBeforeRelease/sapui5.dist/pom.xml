		<version>1.0.5</version>
		<relativePath></relativePath>
	</parent>


	<!--**************************************************************************
	* POM SECTION: Maven Settings
	***************************************************************************-->

	<groupId>com.sap.ui5</groupId>
	<artifactId>reactor</artifactId>
	<version>1.44.3</version>
	<packaging>pom</packaging>


	<!--**************************************************************************
	* POM SECTION: Project Settings
	***************************************************************************-->

	<name>SAPUI5 Core</name>
	<description>SAPUI5 Reactor POM</description>
	<url>http://vesapui5.dhcp.wdf.sap.corp:1080/</url>


	<!--**************************************************************************
	* POM SECTION: Modules Settings
	***************************************************************************-->

	<modules>

		<module>src</module>

	</modules>


	<!--**************************************************************************
	* POM SECTION: Properties Settings
	***************************************************************************-->

	<properties>

		<!-- SAPUI5 Core & Runtime version -->
		<sap.ui5.core.version>1.44.3</sap.ui5.core.version>

		<!-- default build mode (one of dev|productive) -->
		<build.mode>dev</build.mode>

		<!-- Version of jsdoc-maven-plugin (defined as property because it is used in plugin configuration, see module :merged-jsdoc) -->
		<jsdoc-maven-plugin.version>1.1.20</jsdoc-maven-plugin.version>
		<!-- Version of maven-jsdoc-plugin. DEPRECATED, use the new jsdoc-maven-plugin instead. -->
		<maven-jsdoc-plugin.version>1.0.9</maven-jsdoc-plugin.version>
		<!-- Version of jsdoc library as used by the jsdoc-maven-plugin -->
		<jsdoc.lib.version>3.3.3</jsdoc.lib.version>
		<!-- Subversion of the jsdoc template to be used - usually matches major.minor of the current release -->
		<jsdoc.template.subversion></jsdoc.template.subversion>

		<!-- Java Servlet API version -->
		<servlet-api.version>2.5</servlet-api.version>

		<!-- By default we skip the JAR signing -->
		<sap.ui5.jarsigner.skip>true</sap.ui5.jarsigner.skip>

		<!-- Translation information for LDI translation plugin (B7W: 222222, B0Y: 027001 [V1], B0Y: 033000 [V2], B0Y: 073002 -->
		<sap.ui5.translationArea>073002</sap.ui5.translationArea>
		<sap.ui5.translationDomain>BC</sap.ui5.translationDomain>
		<sap.ui5.translationCollection>SAPUI5 UI library</sap.ui5.translationCollection>
		<sap.ui5.translationLanguages></sap.ui5.translationLanguages><!-- empty value means: download full language set associated with translation graph (desired),
																		  this is only overridden by the i18n.build jobs to download 1Q,2Q which are not in the transl. graph -->

		<!-- Default version of the ESLint used by library projects -->
		<sap.ui5.eslint.version>0.13.0</sap.ui5.eslint.version>
		<!-- Default version of the ESLint used by UI5 Core projects -->
		<sap.ui5.core.eslint.version>1.6.0</sap.ui5.core.eslint.version>

		<!-- SONAR configuration (filter for the relevant projects only - the parent modules need also to be listed here) -->
		<sonar.includedModules>reactor,src-reactor,metamodel,generator,theming,shared-utils,resource,utils,core,layout,commons,table,mobile,ux3,unified,comp,fl,dt,rta,uilib-sample,sapui5,demokit,snippix,test-reactor,cactus-unit-tests,qunit-tests</sonar.includedModules>

	</properties>


	<!--**************************************************************************
	* POM SECTION: Build Settings
	***************************************************************************-->

	<build>

		<!-- artifactId-version is required for JAR signing -->
		<finalName>${project.artifactId}-${project.version}</finalName>

		<pluginManagement>

			<plugins>
				<!-- temporary we override the maven-jar-plugin to avoid IDE issues -->
				<!-- issue: https://github.com/sonatype/m2eclipse-extras/issues/10 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.3.2</version>
				</plugin>
				<!-- temporary we override the maven-site-plugin to avoid issues with drop creation -->
				<!-- issue: http://jira.codehaus.org/browse/MSITE-459, http://jira.codehaus.org/browse/WAGON-60 -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-site-plugin</artifactId>
					<version>3.0</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-jsapicheck-plugin</artifactId>
					<version>1.0.3</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>jsdoc-maven-plugin</artifactId>
					<version>${jsdoc-maven-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-jsdoc-plugin</artifactId>
					<version>${maven-jsdoc-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-jslint-plugin</artifactId>
					<version>1.1.1</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>jslint-maven-plugin</artifactId>
					<version>1.1.3</version>
				</plugin>
				<plugin>
					<!-- this is an old, deprecated version of the lightening plugin and only kept for backward compatibility -->
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-lightening-plugin</artifactId>
					<version>1.0.3</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>lightening-maven-plugin</artifactId>
					<version>1.0.24</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-perfmon-plugin</artifactId>
					<version>1.0.0</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-url-plugin</artifactId>
					<version>1.0.0</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>maven-wget-plugin</artifactId>
					<version>1.0.0</version>
				</plugin>
				<!-- WebIDE Metadata production tool -->
				<plugin>
					<groupId>com.sap.ui5.tools.maven</groupId>
					<artifactId>mtproduction-maven-plugin</artifactId>
					<version>1.17.0</version>
				</plugin>
				<plugin>
					<groupId>com.sap.ldi</groupId>
					<artifactId>translation-plugin</artifactId>
					<configuration>
						<!-- if this property has no value, all languages of the translation graph will be downloaded (old behavior) -->
						<languages>${sap.ui5.translationLanguages}</languages>
					</configuration>
				</plugin>
				<plugin>
					<groupId>com.sap.prd.codesign</groupId>
					<artifactId>com.sap.prd.codesign.maven-jarsigner-plugin</artifactId>
					<version>1.0</version>
					<configuration>
						<skip>${sap.ui5.jarsigner.skip}</skip>
					</configuration>
				</plugin>
				<plugin>
					<groupId>com.sap.eslint</groupId>
					<artifactId>eslint-maven-plugin</artifactId>
					<version>0.1.13</version>
				</plugin>
			</plugins>

		</pluginManagement>

	</build>


