<core:View xmlns:core="sap.ui.core"
xmlns="sap.ui.commons" xmlns:layout="sap.ui.commons.layout"
xmlns:table="sap.ui.table" xmlns:np="notepad"
controllerName="webimage.controllers.modules" xmlns:html="http://www.w3.org/1999/xhtml">
	<np:Panel>
		<np:header>
			<np:BreadThread id="brd_thd"></np:BreadThread>
		</np:header>
		<layout:MatrixLayout layoutFixed="false">
			<layout:MatrixLayoutRow>
				<layout:MatrixLayoutCell class="job-table-cell" vAlign="Top">
					<table:Table id="table" columnSelect="colHandle" selectionMode="None" rows="{/categorys}">
						<table:columns>
							<table:Column showSortMenuEntry="false" sortProperty="browser" width="150px">
								<TextView design="Bold" text="Name"/>
								<table:template>
									<TextView text="{categoryName}"/>
								</table:template>
							</table:Column>
							<table:Column showSortMenuEntry="false" sortProperty="pass" width="40px">
								<TextView design="Bold" text="Pass"/>
								<table:template>
									<TextView textAlign="Center" text="{pass}"/>
								</table:template>
							</table:Column>
							<table:Column id="fail_col" showSortMenuEntry="false" sortProperty="fail" hAlign="Center" width="40px">
								<TextView design="Bold" text="Fail"/>
								<table:template>
									<Link text="{fail}" press="displayModuleDetail" enabled="{path:'fail',formatter:'.formatEnable'}"></Link>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</layout:MatrixLayoutCell>
				<layout:MatrixLayoutCell class="job-chart-cell">
					<Column selectData="chartHandle" deselectData="chartHandle" xmlns="sap.viz.ui5" id="jobsChart">
						<plotArea>
							<VerticalBar xmlns="sap.viz.ui5.types" isRoundCorner="true" colorPalette="#9cc677,red" />
						</plotArea>
						<interaction>
							<Interaction xmlns="sap.viz.ui5.types.controller">
								<selectability>
									<Interaction_selectability  mode="multiple"/>
								</selectability>
							</Interaction>
						</interaction>
						<dataset>
							<FlattenedDataset xmlns="sap.viz.ui5.data" data="{/categorys}">
								<dimensions>
									<DimensionDefinition axis="1" name="Browser"
									value="{categoryName}" />
								</dimensions>
								<measures>
									<MeasureDefinition name="Pass" value="{pass}" />
									<MeasureDefinition name="Fail" value="{fail}" />
								</measures>
							</FlattenedDataset>
						</dataset>
					</Column>
				</layout:MatrixLayoutCell>
			</layout:MatrixLayoutRow>
		</layout:MatrixLayout>
	</np:Panel>
</core:View>