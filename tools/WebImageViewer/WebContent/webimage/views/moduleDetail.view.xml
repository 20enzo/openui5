<core:View controllerName="webimage.controllers.moduleDetail" xmlns="sap.ui.commons" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.commons.layout" xmlns:np="notepad" xmlns:table="sap.ui.table" xmlns:ux3="sap.ui.ux3" xmlns:vtypes="sap.viz.ui5.types">
	<np:Panel>
		<np:header>
			<np:BreadThread id="brd_thd" select="handlePressBack"/>
		</np:header>
		<TabStrip id="tab_strip" tabs="{modules}">
			<tabs>
				<Tab text="{moduleName}">
					<layout:MatrixLayout>
						<layout:MatrixLayoutRow>
							<layout:MatrixLayoutCell>
								<table:Table columnSelect="colHandle" id="resultTable" rows="{controls}" selectionMode="None" visibleRowCount="{count}">
									<table:columns>
										<table:Column hAlign="Center" showSortMenuEntry="false" sortProperty="controlName">
											<TextView design="Bold" text="Name"/>
											<table:template>
												<TextView text="{controlName}"/>
											</table:template>
										</table:Column>
										<table:Column hAlign="Center" showSortMenuEntry="pass" sortProperty="pass">
											<TextView design="Bold" text="Pass"/>
											<table:template>
												<TextView text="{pass}" textAlign="Center"/>
											</table:template>
										</table:Column>
										<table:Column hAlign="Center" showSortMenuEntry="false" sortProperty="fail">
											<TextView design="Bold" text="Fail"/>
											<table:template>
												<Link enabled="{path:'fail',formatter:'utils.formatter.Enable'}" press="displayCtrlResults" text="{fail}"/>
											</table:template>
										</table:Column>
									</table:columns>
								</table:Table>
							</layout:MatrixLayoutCell>
						</layout:MatrixLayoutRow>
					</layout:MatrixLayout>
				</Tab>
			</tabs>
		</TabStrip>
	</np:Panel>
</core:View>