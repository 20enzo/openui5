<core:View xmlns:core="sap.ui.core" xmlns="sap.ui.commons" xmlns:layout="sap.ui.commons.layout" xmlns:np="notepad" xmlns:table="sap.ui.table"
controllerName="webimage.controllers.jobDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<np:Panel>
		<np:header>
			<np:BreadThread id="brd_thd" select="handlePressBack"></np:BreadThread>
		</np:header>
		<np:content>
			<TabStrip id="category" tabs="{categorys}">
				<tabs>
					<Tab text="{categoryName}">
						<RowRepeater id="jobDetail_rows" design="Transparent"
						rows="{modules}" class="jobDetail">
							<layout:MatrixLayout>
								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<table:Table columnSelect="colHandle" selectionMode="None" width="300px"
										title="{moduleName}" visibleRowCount="{count}" rows="{controls}">
											<table:columns>
												<table:Column showSortMenuEntry="false" sortProperty="controlName" width="200px">
													<TextView text="Control Name" design="Bold"/>
													<table:template>
														<TextView text="{controlName}" class="job-table_font-size" />
													</table:template>
												</table:Column>
												<table:Column  hAlign="Center" showSortMenuEntry="false" sortProperty="fail"  width="40px">
													<TextView text="Fail" design="Bold"/>
													<table:template>
														<Link text="{fail}" class="job-table_font-size text-align_center"
														press="displayFailImages" />
													</table:template>
												</table:Column>
											</table:columns>
										</table:Table>
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>
							</layout:MatrixLayout>
						</RowRepeater>
					</Tab>
				</tabs>
			</TabStrip>
		</np:content>
	</np:Panel>
</core:View>