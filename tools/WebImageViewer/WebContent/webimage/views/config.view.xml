<core:View controllerName="webimage.controllers.config" xmlns="sap.ui.commons" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.commons.layout" xmlns:np="notepad" xmlns:table="sap.ui.table">
	<np:Panel>
		<np:header>
			<np:BreadThread>
				<np:items>
					<core:Item enabled="false" text="Image Path"/>
				</np:items>
			</np:BreadThread>
		</np:header>
		<np:content>
			<layout:MatrixLayout>
				<layout:MatrixLayoutRow>
					<layout:MatrixLayoutCell class="padding-top">
						<table:Table editable="{/editable}" id="path_table" rows="{/storeMapping}" visibleRowCount="15">
							<table:toolbar>
								<Toolbar design="Transparent">
									<items>
										<ToggleButton icon="img/personalize.gif" lite="true" visible="false" pressed="{/editable}" text="EDIT"/>
									</items>
									<rightItems>
										<Button enabled="{/editable}" icon="img/delete.png" press="deletePathHandle" text="DELETE"/>
										<Button enabled="{/editable}" icon="img/new.png" press="addNewPathHandle" text="NEW"/>
									</rightItems>
								</Toolbar>
							</table:toolbar>
							<table:columns>
								<table:Column>
									<TextView design="Bold" text="Token Name"/>
									<table:template>
										<TextField editable="{/editable}" change="verifyName" value="{tokenName}"/>
									</table:template>
								</table:Column>
								<table:Column width="30%">
									<TextView design="Bold" text="Image Path"/>
									<table:template>
										<TextField editable="{/editable}" change="verifyPath" value="{imageStorePath}"/>
									</table:template>
								</table:Column>
							</table:columns>
						</table:Table>
					</layout:MatrixLayoutCell>
				</layout:MatrixLayoutRow>
				<layout:MatrixLayoutRow>
					<layout:MatrixLayoutCell>
						<Button height="35px" id="apply_btn" press="applyChangeHandle" style="Emph" text="Apply" width="100px"/>
						<Button enabled="false" lite="true" text=" "/>
						<Button height="35px" press="discardChangeHandle" style="Emph" text="Discard" width="100px"/>
					</layout:MatrixLayoutCell>
				</layout:MatrixLayoutRow>
			</layout:MatrixLayout>
		</np:content>
	</np:Panel>
</core:View>