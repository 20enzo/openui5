<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.sap.web.controller" />
	
	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
		<property name="defaultHandler" ref="defaultController" />
	</bean>
	
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver" />
	<bean id="restExceptionResolver" class="com.sap.web.exhandle.RestExceptionHandler">
		<property name="order" value="1" />
		<property name="resolver">
			<bean class="com.sap.web.exhandle.DefaultExceptionResolver">
				<property name="exceptionMappingDefinitions">
					<map>
						<entry key="com.sap.UnknownResourceException" value="404" />
						<entry key="IllegalArgumentException" value="406" />
						<entry key="Throwable" value="500" />
					</map>
				</property>
			</bean>
		</property>
	</bean>
</beans>